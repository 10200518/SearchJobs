  {
    id: 1,
    title: "Desarrollador Frontend",
    company: "TechCorp",
    location: "Bogotá, Colombia",
    type: "Tiempo completo",
    experience: "2-3 años",
    logo: "/placeholder.svg?height=80&width=80",
  },
  {
    id: 2,
    title: "Diseñador UX/UI",
    company: "CreativeStudio",
    location: "Remoto",
    type: "Tiempo completo",
    experience: "3-5 años",
    logo: "/placeholder.svg?height=80&width=80",
  },
  {
    id: 3,
    title: "Analista de Marketing Digital",
    company: "GrowthAgency",
    location: "Medellín, Colombia",
    type: "Tiempo completo",
    experience: "1-2 años",
    logo: "/placeholder.svg?height=80&width=80",
  },
  {
    id: 4,
    title: "Desarrollador Backend",
    company: "SoftwareInc",
    location: "Cali, Colombia",
    type: "Tiempo completo",
    experience: "4-6 años",
    logo: "/placeholder.svg?height=80&width=80",
  },
  {
    id: 5,
    title: "Especialista en SEO",
    company: "DigitalMarketing",
    location: "Remoto",
    type: "Medio tiempo",
    experience: "2-4 años",
    logo: "/placeholder.svg?height=80&width=80",
  },
  {
    id: 6,
    title: "Gerente de Proyectos",
    company: "ProjectMasters",
    location: "Bogotá, Colombia",
    type: "Tiempo completo",
    experience: "5+ años",
    logo: "/placeholder.svg?height=80&width=80",
  },
];
---

<Layout title="Empleos | SearchJobs">
  <Header slot="header" />
  
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Encuentra tu próximo empleo</h1>
      <p class="page-description">Explora todas las oportunidades laborales disponibles</p>
    </div>

    <div class="search-container">
      <form class="search-form">
        <div class="search-input-group">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="search-icon">
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
          <input type="text" placeholder="Cargo, habilidad o palabra clave" class="search-input" />
        </div>
        <div class="search-input-group">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="search-icon">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <input type="text" placeholder="Ciudad o 'Remoto'" class="search-input" />
        </div>
        <button type="submit" class="btn btn-primary search-button">
          Buscar
        </button>
      </form>
    </div>

    <div class="content-container">
      <div class="filters-container">
        <div class="filter-header">
          <h3 class="filter-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="4" y1="21" x2="4" y2="14"></line>
              <line x1="4" y1="10" x2="4" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="12"></line>
              <line x1="12" y1="8" x2="12" y2="3"></line>
              <line x1="20" y1="21" x2="20" y2="16"></line>
              <line x1="20" y1="12" x2="20" y2="3"></line>
              <line x1="1" y1="14" x2="7" y2="14"></line>
              <line x1="9" y1="8" x2="15" y2="8"></line>
              <line x1="17" y1="16" x2="23" y2="16"></line>
            </svg>
            Filtros
          </h3>
        </div>

        <div class="filter-group">
          <h4 class="filter-group-title">Tipo de empleo</h4>
          <div class="filter-options">
            <label class="filter-option">
              <input type="checkbox" name="jobType" value="fullTime" />
              <span>Tiempo completo</span>
            </label>
            <label class="filter-option">
              <input type="checkbox" name="jobType" value="partTime" />
              <span>Medio tiempo</span>
            </label>
            <label class="filter-option">
              <input type="checkbox" name="jobType" value="contract" />
              <span>Por contrato</span>
            </label>
            <label class="filter-option">
              <input type="checkbox" name="jobType" value="freelance" />
              <span>Freelance</span>
            </label>
          </div>
        </div>

        <div class="filter-group">
          <h4 class="filter-group-title">Experiencia</h4>
          <div class="filter-options">
            <label class="filter-option">
              <input type="checkbox" name="experience" value="entry" />
              <span>Sin experiencia</span>
            </label>
            <label class="filter-option">
              <input type="checkbox" name="experience" value="junior" />
              <span>1-2 años</span>
            </label>
            <label class="filter-option">
              <input type="checkbox" name="experience" value="mid" />
              <span>3-5 años</span>
            </label>
            <label class="filter-option">
              <input type="checkbox" name="experience" value="senior" />
              <span>5+ años</span>
            </label>
          </div>
        </div>

        <div class="filter-group">
          <h4 class="filter-group-title">Modalidad</h4>
          <div class="filter-options">
            <label class="filter-option">
              <input type="checkbox" name="modality" value="remote" />
              <span>Remoto</span>
            </label>
            <label class="filter-option">
              <input type="checkbox" name="modality" value="office" />
              <span>Presencial</span>
            </label>
            <label class="filter-option">
              <input type="checkbox" name="modality" value="hybrid" />
              <span>Híbrido</span>
            </label>
          </div>
        </div>

        <button class="btn btn-outline clear-filters-button">Limpiar filtros</button>
      </div>

      <div class="jobs-container">
        <div class="jobs-header">
          <h2 class="jobs-title">Empleos disponibles</h2>
          <div class="jobs-count">{jobs.length} empleos encontrados</div>
        </div>

        <div class="jobs-grid">
          {jobs.map(job => (
            <JobCard job={job} />
          ))}
        </div>

        <div class="pagination">
          <button class="pagination-button" disabled>
            Anterior
          </button>
          <div class="pagination-numbers">
            <button class="pagination-number active">1</button>
            <button class="pagination-number">2</button>
            <button class="pagination-number">3</button>
          </div>
          <button class="pagination-button">Siguiente</button>
        </div>
      </div>
    </div>
  </div>

  <Footer slot="footer" />
</Layout>

